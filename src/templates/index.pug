doctype html

html(lang=locale.htmlLang)
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge, chrome=1')
    meta(name='viewport' content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
    meta(name='google-site-verification' content='c66gcm0iMw487a2YC6w7cFbrhhe_Mh_vVNC6Pt3Dak8')
    meta(name='theme-color' content='#f5f5f5')
    title Aiden Zhao
    meta(name='description' content="zy's homepage")
    meta(name='keywords' content='zy, aiden zhao, homepage, github, blog, resume, 主页, 个人主页, 简历, 博客')
    link(rel='shortcut icon' href='../assets/favicon.png')
    link(rel='stylesheet' href='../styles/app.scss')

  body
    .index
      .locale
        if locale.key == 'zh_cn'
          a(href="en.html") ENG
        else
          a(href="index.html") 中

      .container
        .row
          .col-lg-5.text-center.text-lg-end
            img.avatar(src="../assets/avatar.jpg", alt="my avatar")
          .col-lg-7
            h1 #{name}

            each desc in descriptions
              p.desc
                != desc

            h2 #{contact.title}
            ul.links.links-contact
              each link in contact.list
                li.link.align-self-center
                  span.link-icon
                    i.link-icon-inner(class=link.icon)
                  a.link-label(href=link.href) #{link.label}

            h2 #{links.title}
            ul.links.links-links
              each link in links.list
                li.link.align-self-center
                  i.link-icon(class=link.icon)
                  a.link-label(href=link.href) #{link.label}
