doctype html

html(lang=locale.htmlLang)
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge, chrome=1')
    meta(name='viewport' content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
    meta(name='google-site-verification' content='c66gcm0iMw487a2YC6w7cFbrhhe_Mh_vVNC6Pt3Dak8')
    meta(name='theme-color' content='#f5f5f5')
    title Aiden Zhao
    meta(name='description' content="zy's homepage")
    meta(name='keywords' content='zy, aiden zhao, homepage, github, blog, resume, 主页, 个人主页, 简历, 博客')
    link(rel='shortcut icon' href='../assets/favicon.png')
    link(rel="preconnect", href="https://fonts.gstatic.com")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;400")
    link(rel='stylesheet' href='../styles/app.scss')

  body
    .index
      .locale
        if locale.key == 'zh_cn'
          a(href="index.html") ENG
        else
          a(href="zh.html") 中

      .container
        .row
          .col-lg-4.d-flex.justify-content-center.justify-content-lg-end
            img.avatar(src="../assets/avatar.jpg", alt="my avatar")
          .col-lg-6.mt-lg-0.mt-4
            h1.title #{name}

            each desc in descriptions
              p.desc
                != desc

            h2.section_title #{contact.title}
            ul.list.list-contact
              each link in contact.list
                li.list-item.align-self-center
                  a.link(href=link.href, target=link.target ? link.target : false)
                    span.link-icon
                      i.link-icon-inner(class=link.icon)
                    span.link-label #{link.label}

            h2.section_title #{links.title}
            ul.list.list-links
              each link in links.list
                li.list-item.align-self-center
                  a.link(href=link.href, target=link.target ? link.target : false)
                    span.link-icon
                      i.link-icon-inner(class=link.icon)
                    span.link-label #{link.label}
    script(src="../scripts/main.js")
